        <message>System policy prevents distribution upgrade operation</message>
        <message xml:lang="tr">Sistem politikası dağıtım güncelleme işlemini engelliyor</message>
        <defaults>
            <allow_any>auth_admin_keep_always</allow_any>
            <allow_active>auth_admin_keep_always</allow_active>
            <allow_inactive>auth_admin_keep_always</allow_inactive>
        </defaults>
    </action>

    <action id="tr.org.pardus.comar.system.upgrader.download">
        <description>Distribution upgrader package downloads</description>
        <description xml:lang="tr">Dağıtım güncelleme paketlerin indirilmesi</description>
