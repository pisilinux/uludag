            <allow_inactive>auth_admin_keep_always</allow_inactive>
        </defaults>
    </action>

    <action id="tr.org.pardus.comar.system.upgrader.cleanup">
        <description>Distribution upgrader system cleanup</description>
        <description xml:lang="tr">Dağıtım güncelleme sistem temizliği</description>
        <message>System policy prevents distribution upgrade operation</message>
        <message xml:lang="tr">Sistem politikası dağıtım güncelleme işlemini engelliyor</message>
        <defaults>
